            <div class="flex gap-3">
                <div class="card">
                    <Projects 
                    title='Kovaliov Rest' 
                    paragraph='View menus, schedules, events and make reservations.' 							
                    ground_img='assets/restaurant.jpg'
                    icon_span_one='assets/javascript.png'
                    icon_span_two='assets/tailwind.png'
                    icon_span_three='assets/astro.png'
                link='https://apple.com'
                link_img='assets/arrow_link.svg'
                />
                </div>
                <div class="card">
                <Projects 
                title='Heavenly' 
                paragraph='Social network with encrypted conversations and publication sections' 
                ground_img='assets/socialmedia.jpg'
                icon_span_one='assets/python.svg'
                icon_span_two='assets/mongodb.png'
                icon_span_three='assets/fastapi.svg'
                ground_height='h-[190px] '
                link='https://apple.com'
                link_img='assets/arrow_link.svg'
                />	
                </div>
                <div class="card">
                <Projects 
                title='Modern Train' 
                paragraph='Get training guides from personal trainers and ' 								
                ground_img='assets/rusa.jpg'
                icon_span_one='assets/docker.png'
                icon_span_two='assets/mongodb.png'
                icon_span_three='assets/javascript.png'
                link='https://apple.com'
                link_img='assets/arrow_link.svg'
                />	
                </div>
            </div>
        </div>
    </div>

        <section class="h-64 relative my-4 md:hidden">
            <section class="card_degraded_one">
            </section>
        </section>

        <section class="flex justify-center mb-5">
            <Specialized/>
        </section>

        <section class="h-64 relative my-4 md:hidden">
            <section class="card_degraded_two">
            </section>
        </section>
        
        <section class="flex justify-center mb-5 ">
            <section class="">
            <Experiences/>
            </section>
        </section>
        
        <section class="h-64 relative my-4 md:hidden">
            <section class="card_degraded_three">
            </section>
        </section>

        <section class="flex flex-col justify-center gap-3">
