---
interface Props{
    company?: string
    others?: string
    dates?: string
    workstation?: string
    paragraph?: string
    paragraph_two?: string
    country?: string
    language_one?: string
    language_two?: string
    language_three?: string
    
    }
    const {company,dates,workstation,paragraph,paragraph_two,country,others, language_one,language_two,language_three } = Astro.props
---
       
    <section class="bg-[rgba(114,114,114,0.2)] p-4">
        <section class="">
            <section class="pb-[10px]">
                <section class="flex items-center gap-2 pl-1">
                    <h1 class="text-[16px]">{company}</h1>
                    <span class="text-gray-300 text-[12px] ">{others}</span> 
                    
                </section>
                <section class=" flex  ">
                    <section class="flex gap-1 items-center ">
                        <span class="text-[12px] text-[#4884f3] border border-white/30 p-[3px] rounded-[8px] "> {workstation} </span>
                        <img src={country} alt="" class="h-5 opacity-[0.8] ">
                        <span class="dark:text-black text-[12px] text-[#C7C7C7]">( {dates} )</span>    
                    </section>
                </section>
            </section>


            <section class="dark:text-black text-[#cfcfcf] text-[12px] ">
                <p class="mb-1 pb-3">
                    {paragraph}
                </p>
                <p>
                    {paragraph_two}
                </p>
                <span class="flex justify-end gap-2">
                    <img src={language_one} alt="" class="h-5">
                    <img src={language_two} alt="" class="h-5">
                    <img src={language_three} alt="" class="h-5">
                </span>
            </section>
        </section>
    </section>
