---
interface Props{
    company?: string
    dates?: string
    workstation?: string
    paragraph?: string
    paragraph_two?: string
    country?: string
    img_link?: string
    website_link?: string
    }
    const {company,dates,workstation,paragraph,paragraph_two,country,img_link,website_link } = Astro.props
---
       
    <section class="bg-[rgba(114,114,114,0.2)] p-4">
        <section class="">
            <section class="pb-[10px]">
                <section class="flex items-center gap-1">
                        <img src={country} alt="" class="h-[16px] opacity-[0.8] ">
                        <h1 class="text-[18px]">{company}</h1> 
                </section>
                <span class="text-[15px] text-[#4884f3]"> {workstation} <span class="dark:text-black text-[14px] text-[#C7C7C7]">( {dates} )</span></span>
            </section>


            <section class="dark:text-black pb-[15px] text-[#cfcfcf] text-[14px] ">
                <p class="mb-1 pb-3">
                    {paragraph}
                </p>
                <p>
                    {paragraph_two}
                </p>
            </section>
        </section>
    </section>
